{% extends 'base.html.twig' %}

{% block title %}{{ establishment.name }}{% endblock %}

{% block body %}
<div class="container py-4">

    {# Header #}
    <div class="d-flex flex-wrap align-items-start justify-content-between gap-3 mb-4">
        <div>
            <h1 class="h3 mb-1">{{ establishment.name }}</h1>
            <div class="text-muted">
                {{ establishment.address }}, {{ establishment.postalCode }} {{ establishment.city }}
            </div>
        </div>

        <div class="d-flex gap-2">
            <a href="{{ path('app_establishment_index') }}" class="btn btn-outline-secondary">
                Retour
            </a>

            <a href="{{ path('app_establishment_edit', {'id': establishment.id}) }}" class="btn btn-outline-primary">
                Modifier
            </a>

            {# CTA principal : sans friction #}
            <a href="{{ path('app_service_new_for_establishment', { id: establishment.id }) }}" class="btn btn-primary">
                Ajouter un service
            </a>
        </div>
    </div>

    {# Infos établissement #}
    <div class="card mb-4">
        <div class="card-body">
            <h2 class="h5 mb-3">À propos</h2>
            {% if establishment.description %}
                <p class="mb-0">{{ establishment.description }}</p>
            {% else %}
                <p class="text-muted mb-0">Aucune description.</p>
            {% endif %}
        </div>
    </div>

    {# Services #}
    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h2 class="h5 mb-0">Services proposés</h2>
                <span class="badge bg-light text-dark">
                    {{ establishment.services|length }}
                </span>
            </div>

            {% if establishment.services|length > 0 %}
                <div class="list-group">
                    {% for service in establishment.services %}
                        <div class="list-group-item d-flex flex-wrap align-items-center justify-content-between gap-2">
                            <div>
                                <div class="fw-semibold">{{ service.name }}</div>
                                <div class="text-muted small">
                                    {{ service.duration }} min
                                    {% if service.bufferTime %} • +{{ service.bufferTime }} min tampon{% endif %}
                                    • {{ service.price }} €
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="{{ path('app_service_show', {id: service.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    Voir
                                </a>
                                <a href="{{ path('app_service_edit', {id: service.id}) }}" class="btn btn-sm btn-outline-primary">
                                    Modifier
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted mb-0">Aucun service pour cet établissement.</p>
            {% endif %}
        </div>
    </div>

    {# Delete establishment (si tu veux le garder, mais visuellement plus bas) #}
    <div class="mt-4">
        {{ include('establishment/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}
