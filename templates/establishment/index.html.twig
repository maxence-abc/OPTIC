{% extends 'base.html.twig' %}

{% block title %}Establishment index{% endblock %}

{% block body %}
    <h1>Establishment index</h1>

    {# Messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>PostalCode</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for establishment in establishments %}
            <tr>
                <td>{{ establishment.id }}</td>
                <td>{{ establishment.name }}</td>
                <td>{{ establishment.address }}</td>
                <td>{{ establishment.city }}</td>
                <td>{{ establishment.postalCode }}</td>
                <td>{{ establishment.description }}</td>
                <td>
                    <a href="{{ path('app_establishment_show', {'id': establishment.id}) }}">show</a>
                    <a href="{{ path('app_establishment_edit', {'id': establishment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_establishment_new') }}">Create new</a>
{% endblock %}
