{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}OPTIC{% endblock %}</title>

  <link rel="stylesheet" href="/css/app.css">

  <link rel="stylesheet" href="/css/components/button.css">
  <link rel="stylesheet" href="/css/components/navbar.css">

  {% block stylesheets %}{% endblock %}
  {% block javascripts %}{% endblock %}
</head>

<body class="{% block body_class %}{% endblock %}">

{% block header %}
  <twig:Navbar
    brandHref="{{ path('app_home') }}"
    brandLabel="OPTIC"
    brandIcon="uit:calendar"
    homeHref="{{ path('app_home') }}"
    searchHref="{{ path('app_store_search') }}"
    loginHref="{{ path('app_login') }}"
    registerHref="{{ path('app_registration') }}"
    accountLabel="Mon compte"
    loginLabel="Connexion"
    registerLabel="S'inscrire"
    userIcon="uil:user"
  />
{% endblock %}

<main class="main" role="main">
  {% for message in app.flashes('success') %}
    <div class="container container--wide">
      <div class="alert alert-success" role="alert">{{ message }}</div>
    </div>
  {% endfor %}

  {% for message in app.flashes('error') %}
    <div class="container container--wide">
      <div class="alert alert-danger" role="alert">{{ message }}</div>
    </div>
  {% endfor %}

  {% block body %}{% endblock %}
</main>

{% block footer %}{% endblock %}
</body>
</html>
