{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Nos établissements</h1>

        {% if establishments is empty %}
            <p class="text-center text-muted">Aucun établissement trouvé pour le moment.</p>
        {% else %}
            <div class="row">
                {% for establishment in establishments %}
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">{{ establishment.name }}</h5>
                                <p class="card-text">
                                    {{ establishment.description|default('Aucune description')|slice(0, 120) ~ '...' }}
                                </p>
                                <p class="text-muted">
                                    📍 {{ establishment.address }}, {{ establishment.city }}
                                </p>

                                <a href="{{ path('app_establishment_show', { id: establishment.id }) }}" class="btn btn-primary w-100">
                                    Voir les détails
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
